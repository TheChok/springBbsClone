package com.bbs;

import java.sql.Connection;
import java.sql.DriverManager;

import bbs.Bbs;
import bbs.BbsDAO;

// MultiTester //
public class MultiTester {

	// main //
	public static void main(String[] args) {
		// 데이터베이스 연결 상태 확인 
		/*
		Test1();
		*/
		
		// 게시판 글쓰기 + 이전 다음 버튼 확인용
		/*
		for(int i = 0; i < 10; i++) { 
			bbsWrite(); 
		}
		*/
		
	} // End - main
	
	
	// Test - DB Connection//
	private static void Test1() {
		try {
			String dbURL 		= "jdbc:mysql://localhost:3305/BBS?serverTimezone=UTC";
			String dbID 		= "root";
			String dbPassword 	= "1234";
			
			Class.forName("com.mysql.cj.jdbc.Driver");
			
			Connection conn = DriverManager.getConnection(dbURL, dbID, dbPassword);
			
			System.out.println(conn);
		} catch(Exception e) {
			e.printStackTrace();
		}
	}
	
	
	// Test - BBS Write //
	private static void bbsWrite() {
		Bbs		bbs 	= new Bbs();
		BbsDAO 	bbsDAO 	= new BbsDAO();
		String 	bbsTitle		= "title";
		String 	userID 		= "1234";
		String 	bbsContent 	= "content";
		
		bbs.setUserID(userID);
		
		for(int i = 0; i < 5; i++) {
			bbsTitle = bbsTitle + i;
			bbs.setBbsTitle(bbsTitle);
			
			bbsContent = bbsContent + i;
			bbs.setBbsContent(bbsContent);
			
			System.out.println(bbsTitle + ", " + bbsContent);
			
			bbsDAO.write(bbs.getBbsTitle(), bbs.getUserID(), bbs.getBbsContent());
		}
	}
	
} // End - MultiTester